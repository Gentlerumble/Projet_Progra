<Window x:Class="Projet_Progra.Mail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_Progra"
        mc:Ignorable="d"
        Title="Mail" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,5">
            <TextBlock Text="Votre adresse mail :"/>
            <TextBox x:Name="tbFrom" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,5">
            <TextBlock Text="Mot de passe / Clé d'application:"/>
            <PasswordBox x:Name="pbPassword" Width="300"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0,5">
            <TextBlock Text="Destinataire :"/>
            <TextBox x:Name="tbTo" Width="300"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="0,5">
            <TextBlock Text="Objet :"/>
            <TextBox x:Name="tbSubject" Width="300"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="4" Margin="0,5">
            <TextBlock Text="Message :"/>
            <TextBox x:Name="tbBody" Width="500" Height="150" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>
        <Button x:Name="btnSend" Content="Envoyer" Grid.Row="5" Width="100" Height="30" HorizontalAlignment="Left" Margin="0,10,0,0" Click="btnSend_Click"/>
        <TextBlock x:Name="tbStatus" Grid.Row="5" Margin="120,10,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Red"/>
        <Button x:Name="BtnRetour" Content="Menu Principal" Width="104" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="666,0,0,0" Click="BtnRetour_Click" Grid.Row="5"/>
    </Grid>
</Window>
