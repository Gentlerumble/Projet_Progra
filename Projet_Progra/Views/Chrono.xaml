<Window x:Class="Projet_Progra.Views.Chrono"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Projet_Progra.ViewModels"
        mc:Ignorable="d"
        Title="Chrono" Height="450" Width="800">

    <Window.DataContext>
        <vm:ChronoViewModel/>
    </Window.DataContext>

    <Grid>
        <!-- Conteneur pour centrer le cadran -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Cadran -->
            <Ellipse Stroke="Black"
                     StrokeThickness="3"
                     Width="250"
                     Height="250"/>

            <!-- Chiffres -->
            <Canvas Width="250" Height="250">
                <!-- On crée 12 chiffres autour du cercle -->
                <TextBlock Text="12" Canvas.Left="115" Canvas.Top="10" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="1"  Canvas.Left="165" Canvas.Top="25" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="2"  Canvas.Left="205" Canvas.Top="65" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="3"  Canvas.Left="231" Canvas.Top="115" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="4"  Canvas.Left="205" Canvas.Top="165" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="5"  Canvas.Left="170" Canvas.Top="205" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="6"  Canvas.Left="120" Canvas.Top="219" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="7"  Canvas.Left="65"  Canvas.Top="205" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="8"  Canvas.Left="25"  Canvas.Top="165" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="9"  Canvas.Left="10"  Canvas.Top="115" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="10" Canvas.Left="25"  Canvas.Top="65" FontSize="16" FontWeight="Bold" RenderTransformOrigin="3.586,0.471"/>
                <TextBlock Text="11" Canvas.Left="65"  Canvas.Top="25" FontSize="16" FontWeight="Bold"/>
            </Canvas>

            <!-- Aiguille au centre -->
            <Rectangle Width="2"
                       Height="90"
                       Fill="Red"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       RenderTransformOrigin="0.5,1"
                       Margin="0,0,0,90">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="{Binding AngleSecondes}"/>
                </Rectangle.RenderTransform>
            </Rectangle>

            <Rectangle Width="2"
           Height="80"
           Fill="Blue"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"
           RenderTransformOrigin="0.5,1"
           Margin="0,0,0,80">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="{Binding AngleMinutes}"/>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Grid>

        <!-- Boutons de commande -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,20">
            <Button Content="Démarrer"
                    Command="{Binding DemarrerCommand}"
                    Width="90" Margin="5"/>
            <Button Content="Arrêter"
                    Command="{Binding ArreterCommand}"
                    Width="90" Margin="5"/>
            <Button Content="Réinitialiser"
                    Command="{Binding ReinitialiserCommand}"
                    Width="90" Margin="5"/>
            <Button Content="Retour" 
                    Width="80" 
                    Height="30" 
                    Margin="10,0,0,0"
                    Click="BtnRetour_Click"/>
        </StackPanel>
    </Grid>
</Window>
