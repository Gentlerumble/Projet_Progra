<Window x:Class="Projet_Progra.ToDo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_Progra"
        mc:Ignorable="d"
        Title="ToDo" Height="450" Width="800">

    <Window.Resources>
        <local:TaskToTextDecorationConverter x:Key="TaskConverter"/>
    </Window.Resources>

    <DockPanel Margin="10">
        <!-- Barre d’ajout/suppression en haut -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBox x:Name="tbNewTask" Width="250" Margin="0,0,10,0"/>
            <Button Content="Ajouter" Width="100" Click="AddTask_Click"/>
            <Button Content="Supprimer" Width="100" Margin="10,0,0,0" Click="DeleteTask_Click"/>
        </StackPanel>

        <!-- Bouton Retour en bas -->
        <Button Content="Menu Principal"
                DockPanel.Dock="Bottom"
                Width="100"
                Height="30"
                Margin="10"
                Click="BtnRetour_Click"/>

        <!-- Liste des tâches qui remplit l’espace restant -->
        <ListBox x:Name="lbTasks" ItemsSource="{Binding Tasks}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay}" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Title}"
                                   Foreground="{Binding IsDone, Converter={StaticResource TaskConverter}, ConverterParameter=Color}"
                                   TextDecorations="{Binding IsDone, Converter={StaticResource TaskConverter}, ConverterParameter=Decoration}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
