<Window x:Class="Projet_Progra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Application WPF" Height="200" Width="400">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Fichier">
                <MenuItem Header="Quitter" Click="Quitter_Click"/>
            </MenuItem>
            <MenuItem Header="Fenêtres">
                <MenuItem Header="Mail" Click="OpenMail_Click"/>
                <MenuItem Header="To-Do List" Click="OpenToDo_Click"/>
            </MenuItem>
        </Menu>

        <Grid>
            <TextBlock Text="Bienvenue dans l'application WPF!" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="16"
                       Foreground="DarkBlue"/>
        </Grid>
    </DockPanel>
</Window>